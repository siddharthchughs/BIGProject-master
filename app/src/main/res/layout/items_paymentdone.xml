<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dimen_10dp"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginEnd="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_5dp"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardElevation="@dimen/dimen_3dp"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
 >

        <TextView
            android:id="@+id/tv_trans_clientname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:text="ClientName"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dimen_12sp" />

        <TextView
            android:id="@+id/tv_trans_payment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:text="Payment"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dimen_10sp" />

        <TextView
            android:id="@+id/tv_trans_ClientPhoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:text="Phoneno :123456788"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dimen_10sp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >


            <TextView
                android:id="@+id/tv_trans_payment_date"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_10sp"
                android:text="Date"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:textColor="@color/colorAccent"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/detail_bt_shape"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:text="Detail"
                android:textColor="@color/deatil_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textSize="12sp"


                />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
